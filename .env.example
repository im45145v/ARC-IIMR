# ==============================================
# ALUMNI MANAGEMENT SYSTEM - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# ==============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==============================================
DATABASE_URL=postgresql://username:password@localhost:5432/alumni_db
POSTGRES_USER=alumni_admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=alumni_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ==============================================
# LINKEDIN ACCOUNTS (Multiple account support)
# Format: JSON array of account objects
# ==============================================
LINKEDIN_ACCOUNTS=[{"email": "account1@example.com", "password": "pass1"}, {"email": "account2@example.com", "password": "pass2"}]

# Or individual accounts (fallback)
LINKEDIN_EMAIL_1=your_linkedin_email_1@example.com
LINKEDIN_PASSWORD_1=your_linkedin_password_1
LINKEDIN_EMAIL_2=your_linkedin_email_2@example.com
LINKEDIN_PASSWORD_2=your_linkedin_password_2

# ==============================================
# BACKBLAZE B2 STORAGE
# ==============================================
B2_KEY_ID=your_backblaze_key_id
B2_APPLICATION_KEY=your_backblaze_application_key
B2_BUCKET_NAME=alumni-pdfs
B2_BUCKET_ID=your_bucket_id

# ==============================================
# OPENAI API (for NLP Chatbot)
# ==============================================
OPENAI_API_KEY=your_openai_api_key

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# Browser automation settings
BROWSER_HEADLESS=true
PAGE_LOAD_TIMEOUT=60000
ACTION_DELAY_MIN=3
ACTION_DELAY_MAX=7
SCROLL_DELAY=2

# Scraper settings
MAX_PROFILES_PER_SESSION=50
SESSION_BREAK_MINUTES=30
RATE_LIMIT_DELAY=5

# Admin credentials for Streamlit
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password

# Session secret for Streamlit
STREAMLIT_SECRET_KEY=your_secret_key_here

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/alumni_system.log
